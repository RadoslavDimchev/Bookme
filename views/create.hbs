<section>
  <h1>New Accommodation</h1>

  {{#if error}}
  <div>
    {{#each error.messages}}
    <p>{{this}}</p>
    {{/each}}
  </div>
  {{/if}}

  <form class="aligned" action="/create" method="post">
    <label><span>Name</span><input {{#if error.fields.name}}class="field-error" {{/if}} type="text" name="name"
        value="{{body.name}}"></label>
    <label><span>City</span><input {{#if error.fields.city}}class="field-error" {{/if}} type="text" name="city"
        value="{{body.city}}"></label>
    <label><span>Beds</span><input {{#if error.fields.beds}}class="field-error" {{/if}} type="number" name="beds"
        value="{{body.beds}}"></label>
    <label><span>Price per night</span><input {{#if error.fields.price}}class="field-error" {{/if}} type="number"
        name="price" value="{{body.price}}"></label>
    <label><span>Image URL</span><input {{#if error.fields.imgUrl}}class="field-error" {{/if}} type="text" name="imgUrl"
        value="{{body.imgUrl}}"></label>
    <label><span>Description</span><textarea {{#if error.fields.description}}class="field-error" {{/if}} type="text"
        name="description">{{body.description}}</textarea></label>
    <button>Create</button>
  </form>
</section>
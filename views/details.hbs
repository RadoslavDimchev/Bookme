<section class="container center details">
  {{#with room}}
  <h1>{{name}} Details</h1>
  <p>Location: {{city}}</p>
  <p>Price per night: {{price}}â‚¬</p>
  <p>{{description}}</p>
  <div>
    {{#if imgUrl}}
    <img class="img" src="{{imgUrl}}" alt="room image">
    {{/if}}

  </div>
  <ul class="details-list">
    {{#each facilities}}
    <li>{{label}} <img class="facility-icon" src="{{iconUrl}}" alt="icon"></li>
    {{/each}}
  </ul>

  {{#if isOwner}}
  <a class="btn" href="/room/{{_id}}/edit">Edit</a>
  <a class="btn" href="/facility/{{_id}}/decorateRoom">Facilities</a>
  <a class="btn" href="/room/{{_id}}/delete">Delete</a>
  {{/if}}

  {{/with}}
</section>